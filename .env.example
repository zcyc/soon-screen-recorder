# Environment configuration for Appwrite-based authentication
# Note: this must be .env, not .env.local, without further configuration changes.

# Base URL for different deployment environments
# Development: http://localhost:3000
# Production: https://your-domain.com
# Staging: https://staging.your-domain.com
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id
NEXT_PUBLIC_APPWRITE_DATABASE_ID=your_database_id
NEXT_PUBLIC_APPWRITE_BUCKET_ID=videos

# OAuth Configuration
# Set to true to enable OAuth debugging in development
NEXT_PUBLIC_OAUTH_DEBUG=false